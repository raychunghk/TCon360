{
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "target": "ES2020",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "noImplicitAny": false,
    "types": [
      "node",
      "jest",
      "jest-dom"
    ], // Removed "@testing-library/jest-dom"
    "typeRoots": [
      "./node_modules/@testing-library",
      "./node_modules/@types",
      "./types"
    ],
    "paths": {
      "@/*": [
        "./*"
      ],
      "@base/*": [
        "../*"
      ],
      "@tcon360/config": [
        "../packages/config/dist/index.js"
      ],
      "@tcon360/config/*": [
        "../packages/config/dist/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/**",
    "**/*.test.*",
    "jest.setup.cjs"
  ]
}
