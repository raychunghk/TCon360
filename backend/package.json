  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:createplx": "jest --runInBand --detectOpenHandles --watch --testPathPattern=**/admin.service.spec.ts --testNamePattern='createPublicHoliday'",
    "test:userbackup": "jest --testNamePattern='userBackup' admin.service.spec.ts",
    "test:createpl": "jest --testNamePattern='createPublicHoliday' admin.service.spec.ts",
    "test:db": "jest --testNamePattern='createPublicHoliday' admin.service.spec.ts",
    "test:userx": "jest --runInBand --detectOpenHandles --watch --testPathPattern=**/users.controller.spec.ts --testNamePattern='login'",
    "test:user": "jest --runInBand --detectOpenHandles --testPathPattern=/users.controller.spec.ts$"
  },
